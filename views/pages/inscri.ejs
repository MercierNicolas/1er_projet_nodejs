<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../reusables/layout'); %>
</head>

<body class="container">

    <header>
        <%- include('../reusables/menu'); %>
    </header>
    <h1>Inscription</h1>

    <main class="jumbotron">
        <form action="inscri" method="post" enctype="multipart/form-data">
            <div class="container-vente-produit">
                <fieldset>
                    <legend>Inscription </legend>
                    <hr>

                    <label for="user_nom">Nom : </label>
                    <input type="text" name="user_nom" id="user_nom" placeholder="Entrez votre nom" required>
                    <br>
                    <label for="user_prenom">Prénom : </label>
                    <input type="text" name="user_prenom" id="user_prenom" placeholder="Entrez votre Prénom" required>
                    <br>
                    <label for="user_email">Email : </label>
                    <input type="text" name="user_email" id="user_email" placeholder="Entrez votre Email" required>
                    <br>
                    <label for="user_mdp">Mots de passe : </label>
                    <input type="password" name="user_mdp" id="user_mdp" placeholder="Entrez votre Mots de passe" required>
                    <br>
                    <br>
                 
                    <br>
                    <button type="submit">Inscription</button>
                </fieldset>
            </div>
        </form>
    </main>

    
    <footer>
        <%- include('../reusables/footer'); %>
    </footer>

</body>

</html>